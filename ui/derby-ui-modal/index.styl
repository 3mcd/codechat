.derby-ui-modal-backdrop
	-webkit-animation: 0.3s backdrop_appear ease-out
	-moz-animation: 0.3s backdrop_appear ease-out
	-o-animation: 0.3s backdrop_appear ease-out
	animation: 0.3s backdrop_appear ease-out
	position: fixed;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
	z-index: 1040;
	background-color: #fff;
	opacity: 0.75;


.ui-modal
	position: fixed;
	top: 20%;
	left: 50%;
	z-index: 1050;
	width: 560px;
	margin-left: -280px;
	background-color: #000;
	background: rgba(255,255,255,0.95);
	color: #000;
	-webkit-border-radius:4px;
	-moz-border-radius:4px;
	border-radius: 4px;
	-webkit-box-shadow: 0 0 25px rgba(0,0,0,0.2);
	-moz-box-shadow: 0 25px rgba(0,0,0,0.2);
	box-shadow: 0 0 25px rgba(0,0,0,0.2);
	-webkit-background-clip: padding-box;
	-moz-background-clip: padding-box;
	background-clip: padding-box;
	outline: none;
	padding: 1px;
	-webkit-animation: 0.5s modal_appear ease-out
	-moz-animation: 0.5s modal_appear ease-out
	-o-animation: 0.5s modal_appear ease-out
	animation: 0.5s modal_appear ease-out

	&.inverse
		background: rgba(0,0,0,0.9);
		color: #fff;

		.ui-modal-body
			border: solid 1px #444

	.ui-modal-body
		width: 100%
		height: 100%
		display: block
		padding: 10px
		-webkit-border-radius:4px;
		-moz-border-radius:4px;
		border-radius: 4px;
		box-sizing: border-box
		max-height: 500px;
		overflow: auto;

@keyframes backdrop_appear {
    0% {
        opacity: 0;
    }
    100% {
        opacity: 0.75;
    }
}


@keyframes modal_appear {
    0% {
        opacity: 0;
        transform: scale(0.97);
        -o-transform: scale(0.97);
        -moz-transform: scale(0.97);
        -webkit-transform: scale(0.97);
    }
    100% {
        opacity: 1;
        transform: scale(1);
        -o-transform: scale(1);
        -moz-transform: scale(1);
        -webkit-transform: scale(1);
    }
}
